<div class="jumbotron jumbotron-fluid pageTitle">
    <div class="container">
        <!--put something more descriptive in the title at a later date?-->
        <h1 class="display-4 pageTitle">Travel Search</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="card col-md-4">
            <div class="card-body">
                <h5 class="card-title searchTitle">
                    Search for Events by City:
                </h5>
                <form class="form-inline" method="POST" action="/api/citySearch">
                    <div class="form-group mx-sm-3 mb-2">
                        <p id="fromTitle">City:</p>
                        <input type="text" class="form-control" id="cityEvent" placeholder="City input"
                            name="cityEvent" />
                    </div>

                    <h5 class="card-title searchTitle">Which airports will you be using for your trip? </h5>
                    <div class="form-group mx-sm-3 mb-2">
                        <p id="fromTitle">From:</p>
                        <input type="text" class="form-control" id="cityFrom" name="cityFrom" />
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <p id="toTitle">To:</p>
                        <input type="text" class="form-control" id="cityTo" name="cityTo" />
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <p id="departure">Departure Date:</p>
                        <input type="date" class="form-control" id="departureDate" name="departureDate" />
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <p id="return">Return Date:</p>
                        <input type="date" class="form-control" id="returnDate" name="returnDate" />
                    </div>
                    <div id="centerBtn">
                        <button type="submit" class="btn btn-primary mb-2" id="searchCity">
                            <span class="searchBtn">
                                <i class="fas fa-search"></i>
                            </span>
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-body container">
                <div class="eventSearchResults row">
                    <!--{{#each dataValues.flights}}
                    {{#unless saved}}
                    {{> events/event-block saved=false}}
                    {{/unless}}
                    {{/each}}-->
                    <p>"Hello you are in search results</p>
                    {{#each flights}}
                    {{this.Price}}
                    {{/each}}
                    {{#each events}}
                    {{eventName}}

                    <form action="/citySearch/flight/{{queryId}}/{{eventName}}" method="get">
                        <input type="submit" value="See More!">
                    </form>
                    {{/each}}


                    {{#if dispFlight}}
                    {{flight.eventName}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="card col-md-4">
        <div class="card-body">

        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body container">
                    <div class="flightSearchResults row">
                        {{#each flights}}
                        {{#unless saved}}
                        {{> flights/flight-block saved=false}}
                        {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
